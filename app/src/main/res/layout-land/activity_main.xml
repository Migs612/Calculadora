        <Button
            android:id="@+id/boton0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/botonNumeros"
            android:text="@string/boton0"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/botonDecimal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/restoBotones"
            android:text="@string/decimal"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/botonIgual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/botonOperadores"
            android:text="@string/igual"
            android:textColor="@android:color/white"
            android:textSize="26sp" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>