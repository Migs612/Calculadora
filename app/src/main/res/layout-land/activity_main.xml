<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textoResultado"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:gravity="end|center_vertical"
        android:text="@string/boton0.0"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/cuadrilla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:columnCount="4"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoResultado"
        app:layout_constraintHeight_percent="0.80" >

        <Button
            android:id="@+id/botonVacio"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/fondo"
            android:textColor="@color/fondo"
            android:padding="8dp"
            android:text="@string/vacio"
            android:textSize="26sp" />

        <Button
            android:id="@+id/botonLimpiar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/restoBotones"
            android:text="@string/C"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/botonCE"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/restoBotones"
            android:text="@string/CE"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/botonBorrar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/restoBotones"
            android:text="@string/borrar"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/botonPorcentaje"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/restoBotones"
            android:padding="8dp"
            android:text="@string/porcentajes"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/botonCuadrado"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/restoBotones"
            android:text="@string/cuadrado"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/botonRaiz"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/restoBotones"
            android:text="@string/raiz"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <Button
